rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read everything (for now), but only edit their own profile
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Reports can be read by anyone, but created only by authenticated users
    match /reports/{reportId} {
      allow read: if true;
      allow create: if request.auth != null;
      // Allow updates if the user is the author (or if it's the cloud function doing it - handled by Admin SDK bypassing rules)
      allow update: if request.auth != null && (resource.data.userId == request.auth.uid || request.auth.token.admin == true);
    }
    
    // Articles (Aetherpedia) - Readable by all, writable only by admins (or validated users in future)
    match /articles/{articleId} {
        allow read: if true;
        allow write: if request.auth != null; // Temporarily open for Wikipedia import feature to work for logged in users
    }
  }
}